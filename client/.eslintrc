{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-var": "error",
    "prefer-const": "error",
    "keyword-spacing": "error",
    "object-curly-spacing": ["error", "always"],
    "no-unused-vars": "warn",
    "camelcase": "error",
    "prefer-promise-reject-errors": "error"
  }
}
